<!-- Material form register -->
<link rel="stylesheet" href="/assets/css/login.css">
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card login-card mx-auto">
                <h5 class="card-header white-text text-center py-4">
                    <strong>Sign in</strong>
                </h5>
                <!--Card content-->
                <div class="card-body px-lg-5 pt-0">
                    <form class="text-center login" style="color: #757575;" action="#!" method="POST">
                        <div class="form-row">
                            <div class="col">
                                <div class="md-form">
                                    <input type="email" id="email" class="form-control">
                                    <label for="email">E-mail</label>
                                </div>

                                <div class="md-form">
                                    <input type="password" id="password" class="form-control"
                                        aria-describedby="passwordHelpBlock">
                                    <label for="password">Password</label>
                                    <small id="passwordHelpBlock" class="form-text text-muted mb-4">
                                        At least 8 characters and 1 digit
                                    </small>
                                </div>
                                <button
                                    class="signin-btn btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0"
                                    type="submit">Sign
                                    in</button>
                                <p>Don't have an account?
                                    <em><a href="/signup">Sign up here</a></em></p>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="alert alert-danger col-lg-8 p-4 text-center" role="alert" id="incorrect">
                    Failure to sign in, please check credentials are correct, and try again.
                </div>
                </form>
                {{#if failure}}
                {{> loginerror}}
                {{/if}}

            </div>
        </div>
    </div>
</div>

<!-- Material form register -->