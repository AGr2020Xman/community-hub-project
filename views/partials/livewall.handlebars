<div class="card">
    <div class="card-body">
        <h4 class="card-title">Live Wall</h4>
        <div class="container">
            <div class="row justify-content-center">
                <p id="current-id"></p>
                <div class="md-form">
                    <input type="text" id="test-id" class="form-control">
                    <label for="test-id">Enter test ID</label>
                    <button type="button" id="login-button"
                        class="btn btn-dark btn-sm btn-rounded float-right">Login</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="md-form input-group textarea-border">
                        <textarea class="md-textarea form-control" id="mp-html" rows="3"
                            placeholder="Speak your mind..."></textarea>
                        {{!-- <label for="mp-html">Speak out</label> --}}
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <p><small id="chat-status"></small></p>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-primary btn-sm btn-rounded float-right">Speak</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-3">
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.0.1/socket.io.min.js"></script>
<script src="/assets/js/livewall.js"></script>